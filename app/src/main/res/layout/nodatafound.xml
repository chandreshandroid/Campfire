<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/noDatafoundRelativelayout"
                android:visibility="gone"
                tools:visibility="visible">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
    <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:minHeight="@dimen/_50sdp"
            android:minWidth="@dimen/_50sdp"
             android:id="@+id/noDaImageView"

            android:src="@drawable/no_data_found"/>
        <TextView
                android:id="@+id/nodata1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nointernetImageview"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:autoSizeMaxTextSize="@dimen/_14ssp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/text_primary"

                android:text="@string/no_data_found"
                android:textSize="@dimen/_14ssp"/>


        <TextView
            android:id="@+id/nodatafoundtextview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/no_data_found"
            android:fontFamily="@font/nunito_regular"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_5sdp"
android:gravity="center"

            android:autoSizeMaxTextSize="@dimen/_12ssp"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"
            android:textStyle="normal"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>