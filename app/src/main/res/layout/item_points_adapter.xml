<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">
        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:focusableInTouchMode="true"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@color/white"
            app:corner_radius="@dimen/_7sdp">

            <FrameLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100dp">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/itemPostOwnerPostListImage"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    app:placeholderImageScaleType="fitXY"
                    app:actualImageScaleType="centerCrop"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/itemPostOwnerPostImagePlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_btn_overlay_on_posts_in_profile_and_points_screen"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            </FrameLayout>
        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
           >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemPostOwnerPostTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textBlack16"
                android:text="Lord Jagannath Rath Yatra held peacefully"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/text_black"
                android:singleLine="false"
                android:maxLines="3"
                android:textSize="@dimen/_16ssp"
                android:ellipsize="end"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
            >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLevelPointsIcon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/star_badge_points_screen_small"
            android:adjustViewBounds="true" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/tvTextPoints"
            android:layout_width="wrap_content"
            android:text="10,000"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/_16ssp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>