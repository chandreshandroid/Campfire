<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_images"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="false"
    app:cardBackgroundColor="#00000000"
    android:focusable="false"
    android:keepScreenOn="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp">


    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        app:top_right_corner_radius="@dimen/_10sdp"
        app:top_left_corner_radius="@dimen/_10sdp"
        app:bottom_left_corner_radius="@dimen/_10sdp"
        app:bottom_right_corner_radius="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/ll_Images"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:clickable="false"
            android:focusable="false"
            android:keepScreenOn="true"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rv_Images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:clickable="false"
                android:focusable="false"
                android:keepScreenOn="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/framLayoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/layoutDotsTutorial"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center|bottom"
                        android:orientation="horizontal" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivlogoWaterMark"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/userIdWaterMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5ssp"
                        android:textColor="@color/white"
                        android:shadowColor="@color/bg_gray_dark"
                        android:visibility="visible"
                        tools:text="150" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>


</androidx.cardview.widget.CardView>


