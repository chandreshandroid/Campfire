<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPostOwnerPostListLayoutMain"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/white"
        app:corner_radius="@dimen/_7sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/itemPostOwnerPostListImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:placeholderImageScaleType="centerCrop"
                app:actualImageScaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/itemPostOwnerPostImagePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_btn_overlay_on_posts_in_profile_and_points_screen"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llDraft"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_gravity="bottom|left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#66000000">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Draft"
                tools:text="Draft"
                android:maxLines="1"
                android:textSize="@dimen/_13ssp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:singleLine="false"
                android:fontFamily="@font/nunito_regular"
                android:ellipsize="end"
                style="@style/TextAppearance.AppCompat.Caption"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemPostOwnerPostTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textBlack16"
        android:text="Lord Jagannath Rath Yatra held peacefully"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/white"
        android:singleLine="false"
        android:maxLines="3"
        android:textSize="@dimen/_16ssp"
        android:ellipsize="end"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemPostOwnerPostTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textBlack16"
            android:text="35 Minutes ago"
            android:fontFamily="@font/nunito_light"
            android:textColor="@color/white"
            android:singleLine="false"
            android:maxLines="2"
            android:textSize="@dimen/_14ssp"
            android:ellipsize="end"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/itemPostOwnerPostImageDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_menu_vertical"
            android:rotation="90"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_7sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>