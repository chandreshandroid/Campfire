<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.ViewPointsFragment">

    <include layout="@layout/header_back_with_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_user_trophy"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@drawable/trophy_gold_small"
            app:placeholderImageScaleType="centerCrop"
            app:roundingBorderColor="@color/colorPrimary"
            app:roundingBorderWidth="1dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/tvTextLevel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Bronze Level"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/bronze_level"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/_20ssp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLevelPointsIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/star_badge_points_screen_big"
            android:adjustViewBounds="true" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/tvTextPoints"
            android:layout_width="wrap_content"
            android:text="10,000"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/_20ssp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <include layout="@layout/generallistlayout"/>

</LinearLayout>
