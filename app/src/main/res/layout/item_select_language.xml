<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemSelectLanguageLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/radioLanguage"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_2sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemSelectLanguageTextLanguage"
            style="@style/textBlack16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_marginLeft="@dimen/_10ssp"
            android:maxLines="1"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:singleLine="false"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/white"
            tools:text="Language List" />

    </LinearLayout>

    <com.google.android.material.internal.BaselineLayout
        android:id="@+id/baseLanguage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:background="@color/otp_shadow" />

</LinearLayout>